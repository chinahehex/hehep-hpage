{
	"name": "hehex/hehep-hpage",
	"description": "hehep-hpage 是一个PHP分页组件,支持自定义分页器,支持自定义分页样式,支持lastId模式",
	"license": "Apache-2.0",
	"authors": [
		{
			"name": "hehe"
		}
	],
	"require": {
		"php": ">=7.4"
	},
	"require-dev": {
		"phpunit/phpunit": "^8.5"
	},
	"autoload": {
		"psr-4": {
			"hehe\\core\\hpage\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"hpage\\test\\": "tests/"
		}
	},
	"scripts": {
		"test:win": ["@test:php7","@test:php8"],
		"test:php7": "D:/bin/phpstudy_pro/Extensions/php/php7.4.3nts/php.exe ../vendor/bin/phpunit",
		"test:php8": "D:/bin/phpstudy_pro/Extensions/php/php8.2.9nts/php.exe ../vendor/bin/phpunit"
	}
}
